{
  "name": "webapp",
  "type": "module",
  "scripts": {
    "dev": "node server.cjs",
    "dev:pm2": "pm2 start ecosystem.config.cjs",
    "dev:sandbox": "wrangler pages dev public --ip 0.0.0.0 --port 3000",
    "preview": "wrangler pages dev public",
    "deploy": "wrangler pages deploy public --project-name anesthesia-safety-guideline",
    "deploy:prod": "wrangler pages deploy public --project-name anesthesia-safety-guideline --branch main",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "git:commit": "git add . && git commit -m"
  },
  "dependencies": {
    "express": "^5.2.1",
    "hono": "^4.11.7"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
